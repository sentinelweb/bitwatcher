<resources>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolBarTitleText</item>
        <item name="subtitleTextAppearance">@style/ToolBarSubTitleText</item>
    </style>

    <style name="ToolBarTitleText"
           parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolBarSubTitleText"
           parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <!-- tickers -->
    <style name="Ticker"
           parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Ticker.Header">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="Ticker.Value">
        <item name="android:textStyle">bold</item>
        <item name="android:text">-</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!-- section -->
    <style name="SectionHeader"
           parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ValidatonError"
           parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="DividerHorizontal"
           parent="@android:style/TextAppearance.Material.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>item>
        <item name="android:background">@color/grey_400</item>
    </style>

    <!-- accounts -->
    <style name="Total"
           parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="TotalLabel"
           parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>


</resources>
