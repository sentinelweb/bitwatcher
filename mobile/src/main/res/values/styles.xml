<resources>

    <style name="Ticker"
           parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Ticker.Header">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="Ticker.Value">
        <item name="android:textStyle">bold</item>
        <item name="android:text">-</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="SectionHeader"
           parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ValidatonError"
           parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="DividerHorizontal"
           parent="@android:style/TextAppearance.Material.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>item>
        <item name="android:background">@color/grey_400</item>
    </style>

    <style name="Total"
           parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>
    <style name="TotalLabel"
           parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>


</resources>
