<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="4">
            <TextView
                style="@style/Ticker.Header"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/btc_header_text"
                style="@style/Ticker.Header"
                android:layout_weight="1"
                android:text="BTC"/>
            <TextView
                android:id="@+id/eth_header_text"
                style="@style/Ticker.Header"
                android:layout_weight="1"
                android:text="ETH"/>
            <TextView
                android:id="@+id/bch_header_text"
                style="@style/Ticker.Header"
                android:layout_weight="1"
                android:text="BCH"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="4">
            <TextView
                android:id="@+id/usd_header_text"
                style="@style/Ticker.Header"
                android:layout_weight="1"
                android:text="USD"/>
            <TextView
                android:id="@+id/btc_usd_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/eth_usd_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/bch_usd_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="4">
            <TextView
                android:id="@+id/gbb_header_text"
                style="@style/Ticker.Header"
                android:layout_weight="1"
                android:text="GBP"/>
            <TextView
                android:id="@+id/btc_gbp_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/eth_gbp_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/bch_gbp_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="4">
            <TextView
                android:id="@+id/eur_header_text"
                style="@style/Ticker.Header"
                android:layout_weight="1"
                android:text="EUR"/>
            <TextView
                android:id="@+id/btc_eur_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/eth_eur_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/bch_eur_ticker_text"
                style="@style/Ticker.Value"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>